/* pages/shoplist/shoplist.wxss */
page{
	background: #fff;
}
.shop{
	position: relative;
	padding: 20rpx;
	border-bottom: 1rpx solid #ddd;
	display: flex;
	justify-content: space-between;
}
.shop-img{
	width: 160rpx;
	height: 160rpx;
}
.shop-info{
	width: 520rpx;
	display: flex;
	flex-direction: column;
	font-size: 12px;
	color: #666;
	line-height: 1.5;
}
.shop-title{
	font-size: 16px;
	color: #333;
	width: 372rpx;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.shop-star{ 
	position: absolute;
	right: 20rpx;
	top: 20rpx;
	color: #e2e2e2;
}
.star-before{
	color: #f19e38;
	position: absolute;
	top: 0;
	left: 0;
	overflow: hidden;
}