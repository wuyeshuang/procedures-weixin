/* pages/profile/profile.wxss */
page{
	background: #f1f1f1;
}
.avatar{
	background: #f60;
	height: 400rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.avatar image{
	width: 200rpx;
	height: 200rpx;
	border: 10rpx solid rgba(255, 255, 255, 0.3);
	border-radius: 50%;
}

.cell{
	font-size: 16px;
	margin-top: 30rpx;
	border-top: 1rpx solid #ddd;
}
.cell-item{
	border-bottom: 1rpx solid #ddd;
	background: #fff;
	padding: 20rpx 30rpx;
}